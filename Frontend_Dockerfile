# Dockerfile for serving React app with Nginx server
FROM node:latest as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# This is required to make nginx serve index.html for all routes
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
---------
# Dockerfile for serving React app with Apache server
FROM node:latest as build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM httpd:alpine
COPY --from=build /app/dist /usr/local/apache2/htdocs/
EXPOSE 80
---
# Dockerfile for serving React app with Node.js (Express) server
FROM node:latest
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
EXPOSE 3000
CMD ["npm", "start"]
